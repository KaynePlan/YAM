<Window x:Class="YAM.NotificationWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="" Height="150" Width="300"
        WindowStartupLocation="CenterOwner" ResizeMode="NoResize"
        WindowStyle="None" BorderBrush="Red" BorderThickness="1" ShowInTaskbar="False" IsManipulationEnabled="True">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        
        <Label Grid.Row="0" Content="{Binding Notification, NotifyOnSourceUpdated=True, NotifyOnTargetUpdated=True}" HorizontalAlignment="Center" VerticalAlignment="Center"/>

    </Grid>
</Window>
